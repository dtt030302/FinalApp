<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="#DAE1E7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/chat_shape"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/imv_chat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/free1"
                android:scaleType="centerCrop"
                android:background="@drawable/chat_shape" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
              android:id="@+id/txt_Book"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sensation"
                android:textSize="20sp"
                android:gravity="bottom|center"
                android:textColor="#200E32"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_Author"
                android:layout_height="20dp"
                android:text="Đinh Tấn Tài"
                android:textSize="10sp"
                android:textStyle="italic"
                android:gravity="top|center"
                android:textColor="#200E32"
                android:layout_width="match_parent" />


        </LinearLayout>

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:layout_weight="0.5"-->
<!--            android:layout_width="0dp"-->
<!--            android:text="Joined"-->
<!--            android:textColor="@color/white"-->
<!--            android:layout_height="30dp"-->
<!--            android:background="@drawable/round_out_button"-->
