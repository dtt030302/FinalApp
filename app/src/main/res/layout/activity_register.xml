<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#DAE1E7"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/fulllogo"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký để đọc truyện\nhoàn toàn miễn phí"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textStyle="italic"/>
    
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        
        <Button
            android:id="@+id/btn_loginfb"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/facebook"
            android:backgroundTint="#4267B2"
            android:text="Facebook"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_logingg"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/google"
            android:backgroundTint="@color/white"
            android:text="Google"
            android:textColor="@color/black"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_margin="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="4"
            android:background="#000000"
            android:layout_marginTop="17dp"
            android:backgroundTint="@color/black"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Hoặc"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#818080"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="4"
            android:background="#000000"
            android:layout_marginTop="17dp"
            android:backgroundTint="@color/black"
            android:gravity="center"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/edt_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:maxLines="1"
                android:id="@+id/txt_Email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColor="#212121"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="6dp"
                android:textSize="15sp"
                android:textColorHint="#818080"
                android:backgroundTint="@color/main_darkest"/>

            <EditText
                android:id="@+id/txt_tdn"
                android:backgroundTint="@color/main_darkest"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Tên đăng nhập"
                android:textColor="#212121"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="6dp"
                android:textSize="15sp"
                android:textColorHint="#818080"
                android:maxLength="10"
                android:maxLines="1"
                android:inputType="text"/>

            <EditText
                android:maxLines="1"
                android:maxLength="18"
                android:backgroundTint="@color/main_darkest"
                android:inputType="textPassword"
                android:id="@+id/txt_Password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Mật khẩu"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#212121"
                android:layout_marginTop="10dp"
                android:paddingLeft="6dp"
                android:textSize="15sp"
                android:textColorHint="#818080"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <CheckBox
            android:id="@+id/chb_dkdv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:layoutDirection="rtl"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Tôi đồng ý với các"
                android:gravity="bottom"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_dkdv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/dkdv"
                android:textStyle="italic"
                android:textColor="#0353FC"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Đăng ký"
        android:backgroundTint="#00909E"
        android:background="@drawable/round_out_button"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0353FC"
            android:text="Nếu bạn có tài khoản, "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0353FC"
            android:text="@string/login"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>