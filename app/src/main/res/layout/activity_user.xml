<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:background="#DAE1E7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            android:weightSum="10"
            android:padding="3dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_weight="2"
                android:background="#DAE1E7"
                android:src="@drawable/search"/>

            <TextView
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/main_dark"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="40sp"
                android:text="Cá nhân"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btn_notification"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/notification"
                android:layout_weight="2"
                android:background="#DAE1E7"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_personal_infor"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:backgroundTint="@color/white"
            android:background="@drawable/circle"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="40dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/userpic"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Username"
                    android:layout_gravity="start"
                    android:gravity="bottom|start"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="google@st.uel.edu.vn"
                    android:layout_gravity="start"
                    android:gravity="top|start"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/hovaten"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/noti_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_user"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="Thông báo"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_user"
                android:layout_gravity="right|center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacy_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/privacy_user"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="Quyền riêng tư"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_user"
                android:layout_gravity="right|center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/security_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/security_user"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="Bảo mật"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_user"
                android:layout_gravity="right|center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_detail"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="Tài khoản thanh toán"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_user"
                android:layout_gravity="right|center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/display_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/display_user"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="Giao diện"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_user"
                android:layout_gravity="right|center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/language_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/language_user"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="Ngôn ngữ"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_user"
                android:layout_gravity="right|center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/help_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/help_user"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="Hỗ trợ"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_user"
                android:layout_gravity="right|center"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/round_out_button"
            android:backgroundTint="@color/main_darkest"
            android:layout_marginTop="15dp"
            android:textColor="@color/main_lightest"
            android:text="Đăng xuất"
            android:textSize="15sp"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fulllogo"
            android:scaleType="centerCrop"
            android:layout_marginBottom="60dp"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="#142850"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"/>

</RelativeLayout>