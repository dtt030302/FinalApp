<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#DAE1E7"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/fulllogo"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập để đọc truyện\nhoàn toàn miễn phí"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_loginfb"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/facebook"
            android:backgroundTint="#4267B2"
            android:text="Facebook"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_logingg"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/google"
            android:backgroundTint="@color/white"
            android:text="Google"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_margin="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="4"
            android:background="#000000"
            android:layout_marginTop="17dp"
            android:backgroundTint="@color/black"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Hoặc"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#818080"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="4"
            android:background="#000000"
            android:layout_marginTop="17dp"
            android:backgroundTint="@color/black"
            android:gravity="center"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/edt_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_tdn_Email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Tên đăng nhập/Email"
                android:textColor="#212121"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="6dp"
                android:textSize="15sp"
                android:textColorHint="#818080"
                android:backgroundTint="@color/main_darkest"
                android:maxLines="1"
                android:inputType="text|textEmailAddress"/>

            <EditText
                android:maxLines="1"
                android:backgroundTint="@color/main_darkest"
                android:inputType="textPassword"
                android:id="@+id/txt_Password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Mật khẩu"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#212121"
                android:layout_marginTop="10dp"
                android:paddingLeft="6dp"
                android:textSize="15sp"
                android:textColorHint="#818080"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/chb_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Lưu mật khẩu"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt_quenmk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#0353FC"
            android:text="@string/forgotpass"
            android:textStyle="italic"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Đăng nhập"
        android:backgroundTint="#00909E"
        android:background="@drawable/round_out_button"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/txt_dn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0353FC"
        android:text="@string/tkmoi"
        android:gravity="center|top"
        android:layout_marginTop="10dp"/>

</LinearLayout>