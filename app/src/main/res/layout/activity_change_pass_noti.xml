<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="300dp"
    tools:context=".ChangePassNotiActivity"
    android:background="#DAE1E7"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:minHeight="300dp"
    android:minWidth="200dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email đã gửi"
        android:textSize="20dp"
        android:textColor="@color/main_darkest"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Vui lòng đặt lại mật khẩu thông qua hướng dẫn đã được gửi đến email của bạn"
        android:textSize="15sp"
        android:textColor="@color/main_darkest"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txt_out"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đồng ý"
        android:textSize="15sp"
        android:textColor="@color/main_dark"/>


</LinearLayout>